---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { Article } from "../views/Article/Article";
import { blogTags } from "../components/blogTags";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout {...post.data}>
  <Article
    squareHeroImageUrl={post.data.squareHeroImageUrl}
    panoramicHeroImageUrl={post.data.panoramicHeroImageUrl}
    heroImageAlt={post.data.heroImageAlt}
    title={post.data.title}
    description={post.data.description}
    authorship={post.data.authorship}
    authorshipSecondary={post.data.authorshipSecondary}
  >
    <Content components={blogTags} />
  </Article>
</Layout>
